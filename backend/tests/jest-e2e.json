{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["./jest-setup.js"],
  "moduleNameMapper": {   
    "src/(.*)": ["<rootDir>/src/$1"],
    "@config/(.*)": ["<rootDir>/src/common/infrastructure/config/$1"],    
    "@infrastructure/(.*)": ["<rootDir>/src/common/infrastructure/$1"],
    "@modules/(.*)": ["<rootDir>/src/modules/$1"],
    "@presentation/(.*)": ["<rootDir>/src/common/presentation/$1"],
    "@tests/(.*)": ["<rootDir>/../tests/$1"]
  }
}